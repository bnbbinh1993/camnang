<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.RegisterActivity">
    <ImageView
        android:id="@+id/register_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/avtaog"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/register_image"
        android:layout_alignParentStart="true"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"

        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/register_key"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/register_email"
        android:layout_alignParentStart="true"
        android:background="@drawable/input"
        android:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:hint="Password..."
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"

        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/register_buttons"
        android:layout_below="@+id/register_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:background="#f00"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/already_have_account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_buttons"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Already have an Account?"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        tools:ignore="HardcodedText" />

</RelativeLayout>